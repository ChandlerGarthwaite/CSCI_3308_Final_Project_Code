  </head>
  <% include ../partials/menu %>
  <body>
    <div style="width: 100%; height: 100%">
      <!--sidebar content-->
      <div id="sidebar" class="leaflet-sidebar collapsed">
        <!-- nav tabs -->
        <div class="leaflet-sidebar-tabs">
            <!-- top aligned tabs -->
            <ul role="tablist">
              <li>
                <a href="#home" role="tab">
                  <i class="fa fa-bars active"></i>
                </a>
              <li>
                <a href="#chat" role="tab">
                  <i class="fa fa-wechat"></i>
                </a>
              <li>
                <a href="#settings" role="tab">
                  <i class="fa fa-gear"></i>
                </a>
            </ul>
        </div>
        <div class="leaflet-sidebar-content">
          <div class="leaflet-sidebar-pane" id="home">
            <h1 class="leaflet-sidebar-header">
              SideBar Panel 1
              <span class="leaflet-sidebar-close"><i class="fa fa-caret-left"></i></span>
            </h1>
            <!--Panel 1-->
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#norlin-panel">Norlin Library</a>
                  </h4>
                </div>
                <div id="norlin-panel" class="panel-collapse collapse">
                  <ul class="list-group">
                    <li class="list-group-item">15 People Studying Math</li>
                    <li class="list-group-item">9 People Studying Biology</li>
                    <li class="list-group-item">17 People Studying Chemistry</li>
                  </ul>
                </div>
              </div>
            </div>
            <!--Panel 2-->
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#gemmill-panel">Gemmill Library</a>
                  </h4>
                </div>
                <div id="gemmill-panel" class="panel-collapse collapse">
                  <ul class="list-group">
                    <li class="list-group-item">7 People Studying Math</li>
                    <li class="list-group-item">5 People Studying Physics</li>
                  </ul>
                </div>
              </div>
            </div>
            <!--Panel 3-->
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#koelbel-panel">Koelbel Library</a>
                  </h4>
                </div>
                <div id="koelbel-panel" class="panel-collapse collapse">
                  <ul class="list-group">
                    <li class="list-group-item">15 People Studying Business</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="leaflet-sidebar-pane" id="chat">
            <h1 class="leaflet-sidebar-header">
              SideBar Pannel 2
              <span class="leaflet-sidebar-close"><i class="fa fa-caret-left"></i></span>
            </h1>
            <p>( ͡°( ͡° ͜ʖ( ͡° ͜ʖ ͡°)ʖ ͡°) ͡°)</p>
          </div>
          <div class="leaflet-sidebar-pane" id="settings">
            <h1 class="leaflet-sidebar-header">
              SideBar Pannel 3
              <span class="leaflet-sidebar-close"><i class="fa fa-caret-left"></i></span>
            </h1>
            <p>༼ つ  ͡° ͜ʖ ͡° ༽つ</p>
          </div>
        </div>
      </div>

      <!--Interactive Map-->
      <div id = "map" style = "width: 100%; height: 100%"></div>
      <script src="https://unpkg.com/leaflet/dist/leaflet.js" crossorigin=""></script>
      <script src="../resources/js/leaflet-sidebar.js"></script>
      <script>
        // Creating map options
        var mapOptions = {
          center: [40.0054, -105.2678],
          zoom: 16
        }

        // New map object
        var map = new L.map('map', mapOptions);

        var southWest = L.latLng(40.000, -105.277),
          northEast = L.latLng(40.015, -105.259),
          bounds = L.latLngBounds(southWest, northEast);

        // New layer object
        var layer = new L.TileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          maxBounds: bounds,
          maxZoom: 19,
          minZoom: 15
        });


        //Adding layer to home page
        map.addLayer(layer);


        //Creating marker icon
        var bookIcon = L.icon({
          iconUrl: '../resources/img/bookIcon.png',
          iconSize: [40, 40]
        });

        //Markers with titles to each study location
        var norlinMarker = L.marker([40.00877, -105.27077], {
          icon: bookIcon,
          title: "Norlin Library"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var gemmillMarker = L.marker([40.00783, -105.26446], {
          icon: bookIcon,
          title: "Gemmill Math Library"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var bensonMarker = L.marker([40.00800, -105.26602], {
          icon: bookIcon,
          title: "Benson Earth Sciences"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var engMarker = L.marker([40.00714, -105.26276], {
          icon: bookIcon,
          title: "Engineering Building"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var wiseMarker = L.marker([40.00114, -105.26215], {
          icon: bookIcon,
          title: "Wise Law Library"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var koelbelMarker = L.marker([40.00569, -105.26347], {
          icon: bookIcon,
          title: "Koelbel Business Library"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);

        var caseMarker = L.marker([40.00635, -105.27023], {
          icon: bookIcon,
          title: "CASE"
        }).bindPopup("0 people studying here").openPopup().on('click', markerOnClick).addTo(map);


        var sidebar = L.control.sidebar({ container: 'sidebar' }).addTo(map);

        function markerOnClick()
        {
          sidebar.open('home');
        }

      </script>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
